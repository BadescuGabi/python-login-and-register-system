
<CreateAccountWindow>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'favicon.png'
    name: "create"

    namee: namee
    code: code
    password: passw
    confirmpassword:confpassw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.15
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 15**4

            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                font_size: (root.width**2 + root.height**2) / 15**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.05
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 15**4

            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Code: "
                font_size: (root.width**2 + root.height**2) / 15**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.05
                id: code
                multiline: False
                font_size: (root.width**2 + root.height**2) / 15**4

            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 15**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.05
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 15**4

            Label:
                size_hint: 0.5,0.05
                pos_hint: {"x":0, "top":0.8-0.13*3}
                text: "Confirm password: "
                font_size: (root.width**2 + root.height**2) / 15**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*3}
                size_hint: 0.4, 0.05
                id: confpassw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 15**4


        Button:
            pos_hint:{"x":0.3,"y":0.21}
            size_hint: 0.4, 0.08
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.1
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'favicon.png'
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.1

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.1

        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.1

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.1

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()

        Button:
            pos_hint:{"x":0.3,"y":0.45}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 15**4
            text: "Forgot password?"
            on_release:
                root.manager.transition.direction = "right"
                root.newpasswordBtn()

